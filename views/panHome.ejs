<script type="text/javascript">
  $(document).ready(function() {
    var checkNick = 0;
    $("#nameJ")
      .keyup(function() {
        if ($('#nameJ').val() != "") {
          $.ajax({
            type: 'post',
            url: '/idcheck/' + $('#nameJ').val(),
            dataType: 'json',
            success: function(json) {
              var comment = $.parseJSON(json);
              if (comment.count == 0) {
                $('#checkMsg').html('<p class="text-primary">사용할 수 있습니다</p>');
                checkNick = 1;
              } else {
                $('#checkMsg').html('<p class="text-danger">이미 존재하는 닉네임입니다</p>');
                checkNick = 0;
              }
            }
          });
        }
      })
      .keyup();

    var wf = document.getElementById("writeForm");

    wf.onsubmit = function() {
      if (checkNick == 0) {
        $("#nameJ").focus();
        alert("닉네임을 입력해주세요");
        return false;
      } else if ($("input[name=genderJ]:checked").val() == null) {
        $("input[name=genderJ]").focus();
        alert("성별을 선택해주세요");
        return false;
      } else if ($("select[name=yearJ]").val() == "") {
        $("select[name=yearJ]").focus();
        alert("출생연도를 선택해주세요");
        return false;
      } else if ($("input[name=sideJ]:checked").val() == null) {
        $("input[name=sideJ]").focus();
        alert("성향을 선택해주세요");
        return false;
      } else {
        var submitEnd = confirm('가입이 완료됩니다.');
        if (submitEnd) {
          return true;
        } else {
          return false;
        }
      }
    }
  });
</script>

