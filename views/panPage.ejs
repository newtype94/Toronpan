<!DOCTYPE html>
<html lang="ko">

<head>
  <% include ./head %>
</head>

<body>
  <% include ./header %>
  <div class="container">

    <div class="row">
      <div class="col-12 text-center">
        <%= title%>
      </div>
    </div>
    <hr>
    <% if (panArr !== null){
    for(var i = 0; i < panArr.length; i++) { %>
    <div class="row">
      <div class="col-12" style="text-align:left;">
        <a href="/pan/<%=panArr[i]._id%>" class="list-group-item list-group-item-action">
          <p class="font-weight-bold" style="overflow:hidden;">
            <%=panArr[i].title%>
          </p>
          <span>
            <%=panArr[i].writer%></span>
          <span class="font-weight-light">
            <% var now = new Date(); now = now.toLocaleDateString();
          if (now==panArr[i].board_date.toLocaleDateString()){ %>
            <%= panArr[i].board_date.toLocaleTimeString().slice(0,5) %>
            <% }else{ %>
            <%= panArr[i].board_date.toLocaleDateString().slice(5,10) %>
            <% } %>
          </span>
          <span>(
            <%= panArr[i].like_number%> )</span>
        </a>
      </div>
    </div>
    <%  }} %>
    <div class="row">
      <div class="col-12">
        <nav aria-label="Page navigation example" style="padding:30px;">
          <ul class="pagination justify-content-center">
            <% var start=page;
        if((start%10)==0){
          start--;
        }
        while((start%10)!=0){
          start--;
        }
        start++;
        if((start+9)>pagination){
          end=pagination;
        }else{
          end=start+9;
        }
        if(start!==1){ %>
            <li class="page-item">
              <a class="page-link" href="./<%=start-1%>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <% }
            for(var i=start; i<=end; i++){
            if(i==page){ %>
            <li class="page-item active"><a class="page-link" href="./<%=i%>" class="page-link">
                <%=i%></a></li>
            <% } else{%>
            <li class="page-item"><a class="page-link" href="./<%=i%>" class="page-link">
                <%=i%></a></li>
            <% } %>
            <%}
        if(end!=pagination){ %>
            <li class="page-item">
              <a class="page-link" href="./<%=end+1%>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
            <%} %>
          </ul>
        </nav>
      </div>
    </div>
  </div>


  <% include ./footer %>

</body>

</html>
